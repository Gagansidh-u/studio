
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /wallets/{userId} {
      // Users can create their own wallet, but not anyone else's.
      // The `userId` in the document must match the authenticated user's ID.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can read and update their own wallet information.
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    match /orders/{orderId} {
      // Users can create new orders for themselves.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;

      // Users can only read their own orders.
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
